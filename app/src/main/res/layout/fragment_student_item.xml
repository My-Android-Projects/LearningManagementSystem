<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/auth_screens_background"
app:cardCornerRadius="10dp"
android:layout_marginTop="30dp"
android:layout_marginBottom="30dp"
android:layout_marginLeft="15dp"
android:layout_marginRight="15dp"
android:outlineSpotShadowColor="@color/colorThemePink"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:weightSum="8"
    android:id="@+id/llContent">

    <ImageView
        android:layout_weight="3.0"
        android:id="@+id/imgStudentPhoto"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:padding="5dp"/>

    <RelativeLayout
        android:layout_weight="5.0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="6">
        <com.srs.lmpapp.utils.MSPTextView
            android:id="@+id/txtStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:layout_weight="2"
            android:padding="8dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <com.srs.lmpapp.utils.MSPTextView
            android:id="@+id/txtStudentEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtStudentName"
            android:text="Email@Email.com"
            android:layout_weight="2"
            android:padding="8dp"
            android:textAlignment="center"
            android:textSize="15sp"/>

        <com.srs.lmpapp.utils.MSPTextView
            android:id="@+id/txtStudentMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="890-697-6003"
            android:layout_weight="2"
            android:padding="8dp"
            android:layout_below="@id/txtStudentEmail"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

    </RelativeLayout>

</LinearLayout>


</androidx.cardview.widget.CardView>