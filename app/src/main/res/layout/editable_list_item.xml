<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/llContent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

<com.srs.lmpapp.utils.MSPEditText xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/txtModule"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:textSize="16sp"
    android:text="add module..."
    android:imeOptions="actionDone"
    android:enabled="true"
    android:layout_weight="8"/>

    <ImageButton
        android:layout_weight="1"
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_description"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="5dp"
        android:src="@drawable/ic_vector_confirm"/>
    <ImageButton
        android:layout_weight="1"
        android:id="@+id/btn_delete_module"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_description"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="5dp"
        android:src="@drawable/ic_vector_delete"/>
</LinearLayout>
</LinearLayout>