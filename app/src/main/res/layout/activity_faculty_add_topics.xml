<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOffWhite"
    android:orientation="vertical"
    tools:context=".ui.activities.FacultyAddTopicsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_topics_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/app_gradient_color_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/btn_topics_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_white_color_back_24dp"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/toolbar_title_paddingStart"
            android:paddingEnd="0dp"
            android:text="TOPICS"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/toolbar_title_text_size"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_AddTopics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_vector_add_product"/>

    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:id="@+id/tv_no_topics_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="No Topics Added Yet"
        android:textAlignment="center"
        android:textSize="@dimen/no_data_found_textSize"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_product_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

         />

</LinearLayout>