<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearningManagementSystem" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LMSApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LMSApp.AppBarOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="Theme.LMSApp.PopupOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar" />
</resources>