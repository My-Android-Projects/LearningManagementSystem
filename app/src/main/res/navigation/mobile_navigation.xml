        android:name="com.srs.lmpapp.ui.fragments.MyCoursesFragment"
        android:label="@string/title_mycourses"
        tools:layout="@layout/fragment_mycourses" />

    <fragment
        android:id="@+id/navigation_coursearch"
        android:name="com.srs.lmpapp.ui.fragments.CourseSearchFragment"
        android:label="@string/title_coursesearch"
